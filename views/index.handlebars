    <option value="Shot">Shot</option>
    <option value="Coffee / Tea">Coffee / Tea</option>
    <option value="Homemade Liqueur">Homemade Liqueur</option>
    <option value="Punch / Party Drink">Punch / Party Drink</option>
    <option value="Beer">Beer</option>
    <option value="Soft Drink / Soda">Soft Drink / Soda</option>
  </select>
  <button id="cat-search" class="btn btn-primary">Go</button>

  <div id="results"></div>
</div>

{{!-- Main Page Cocktails Display--}}
{{!-- Currently populates from db but will populate from axios call in future --}}
<div id="main py-5 bg-light">
  <div class="container">
    {{!-- when loading index page pushes msg here from htmlroutes--}}
    <h1>{{msg}}</h1>
    <div class="row">
      {{#each cocktails}}
        <div class="col-md-4" data-id="{{this.id}}">
          <div class="drink card mb-4 shadow-sm">
              <img src="{{this.pic}}" class="card-img-top" width="100%" height="300" preserveAspectRatio="xMidYMid slice" focusable="false"  aria-label="{{this.name}}"><title>{{this.name}}</title><rect width="100%" height="100%" fill="#55595c"></rect></img>
              <div class="card-body">
                <p class="drinkName card-text"><a href="/cocktails/{{this.id}}">{{this.name}}</a></p>
                {{!-- <p class="drinkName card-text"><a data-toggle="modal" href="#cocktailModal">{{this.name}}</a></p> --}}
      {{!-- need to figure out how to capture liked drink --}}
                {{#if this.favorite}}
                  <a class="favored toggle-icon toggled" href="cocktails/{{this.id}}">
                    <i class="fas fa-star"></i>
                  </a>
                {{else}}
                  <a class="favored toggle-icon toggled" href="cocktails/{{this.id}}">
                    <i class="far fa-star"></i>
                  </a>
                {{/if}}
              </div>
            </div>
          </div>
      {{/each}}
    </div>
  </div>
</div>
{{!-- End of main page container with popular cocktails --}}

{{!-- Cocktail Modal --}}
{{!-- curretnly does not populate with the correct info; still working on this --}}
<div class="modal fade" id="cocktailModal" tabindex="-1" role="dialog" aria-labelledby="cocktailModalTitle"
  aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content" data-id="{{this.id}}">
            <div class="modal-header">
                <img src="{{this.pic}}" class="modal-image" width="100%" height="350" preserveAspectRatio="xMidYMid slice" focusable="false"  aria-label="{{this.name}}">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <h5 class="card-title"><strong>{{this.name}}</strong></h5>
                <p><strong>Category:</strong> {{this.category}}</p>
                <p><strong>Glass:</strong> {{this.glass}}</p>
                <p><strong>Instructions:</strong> {{this.instructions}}</p>
                <p><strong>Ingredients:</strong> {{this.ing}}</p>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Customize</button>
                <button type="button" class="btn btn-primary">Save</button>
                <a href="/">‚Üê Back To Home</a>
            </div>
        </div>
    </div>
</div>
